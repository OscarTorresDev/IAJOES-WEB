---
import { getLangFromUrl, useTranslations } from '../utils/i18n';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="section bg-primary-600 text-white">
  <div class="container">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold mb-6">{t('contact.title')}</h2>
      <p class="text-xl text-primary-100 mb-12">{t('contact.subtitle')}</p>

      <!-- Solo la tarjeta de email, centrada -->
      <div class="max-w-md mx-auto">
        <div class="card bg-white text-gray-900 p-8 hover:scale-105 transition-transform">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">{t('contact.email')}</h3>
          <p class="text-gray-600">aiaveragejoes@gmail.com</p>
        </div>
      </div>
    </div>
  </div>
</section>
