---
import { getLangFromUrl, useTranslations } from '../utils/i18n';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="section bg-primary-600 text-white">
  <div class="container">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold mb-6">{t('contact.title')}</h2>
      <p class="text-xl text-primary-100 mb-12">{t('contact.subtitle')}</p>

      <!-- Solo la tarjeta de telÃ©fono, centrada -->
      <div class="max-w-md mx-auto">
        <div class="card bg-white text-gray-900 p-8 hover:scale-105 transition-transform">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">{t('contact.phone')}</h3>
          <p class="text-gray-600">+1 (555) 123-4567</p>
        </div>
      </div>
    </div>
  </div>
</section>
