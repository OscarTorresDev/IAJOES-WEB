---
import { getLangFromUrl, useTranslations, getLocalizedUrl } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <a href={getLocalizedUrl('/', lang)} class="flex items-center space-x-3 text-2xl font-bold text-primary-600 hover:text-primary-700 transition-colors">
        <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-lg">AJ</span>
        </div>
        <span>AI Joes</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-8">
        <a href={getLocalizedUrl('/', lang)} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">{t('nav.home')}</a>
        <a href={getLocalizedUrl('/#about', lang)} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">{t('nav.about')}</a>
        <a href={getLocalizedUrl('/#services', lang)} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">{t('nav.services')}</a>
        <a href={getLocalizedUrl('/blog', lang)} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">{t('nav.blog')}</a>
        <a href={getLocalizedUrl('/#contact', lang)} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">{t('nav.contact')}</a>
        
        <!-- Language Switcher -->
        <div class="flex items-center space-x-2 border-l border-gray-200 pl-8">
          <span class="text-sm text-gray-500">{t('nav.language')}:</span>
          <a 
            href={lang === 'en' ? '/es' : '/'} 
            class="text-primary-600 hover:text-primary-700 font-medium transition-colors"
          >
            {lang === 'en' ? 'ES' : 'EN'}
          </a>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="lg:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden lg:hidden pb-4 border-t border-gray-100">
      <div class="flex flex-col space-y-4 pt-4">
        <a href={getLocalizedUrl('/', lang)} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">{t('nav.home')}</a>
        <a href={getLocalizedUrl('/#about', lang)} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">{t('nav.about')}</a>
        <a href={getLocalizedUrl('/#services', lang)} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">{t('nav.services')}</a>
        <a href={getLocalizedUrl('/blog', lang)} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">{t('nav.blog')}</a>
        <a href={getLocalizedUrl('/#contact', lang)} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">{t('nav.contact')}</a>
        <div class="flex items-center space-x-2 pt-2 border-t border-gray-100">
          <span class="text-sm text-gray-500">{t('nav.language')}:</span>
          <a 
            href={lang === 'en' ? '/es' : '/'} 
            class="text-primary-600 hover:text-primary-700 font-medium transition-colors"
          >
            {lang === 'en' ? 'Espa√±ol' : 'English'}
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>